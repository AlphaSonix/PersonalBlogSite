<%- include ('partial/header'); -%>

<h1>Compose a Message</h1>

<form class="form-group" action="/compose" method="post">

    <label for="newTitle">Title</label>
    <input type="text" class="form-control" name="newTitle">
    <label for="newPost">Post</label>
    <textarea class="form-control" name="newPost" col="5" rows="5" placeholder="Write post here..." autocomplete="off"></textarea>
    <br> 
    <button class="btn btn-primary" name="post" type="submit"> Publish </button>
</form>

<%- include ('partial/footer'); -%>